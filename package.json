{
    "name": "@dhis2/ui-form",
    "version": "0.0.1",
    "main": "./build/cjs/index.js",
    "module": "./build/es/index.js",
    "sideEffects": false,
    "repository": "git@github.com:dhis2/ui-forms.git",
    "author": "Jan-Gerke Salomon <jan-gerke@dhis2.org>",
    "contributors": [],
    "license": "BSD-3-Clause",
    "private": false,
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "extract-pot": "d2-i18n-extract -p src/ -o i18n/",
        "generate-locale": "d2-i18n-generate -n 'ui-forms' -p ./i18n/ -o ./src/locales/",
        "localize": "yarn extract-pot && yarn generate-locale",
        "prebuild": "rm -rf ./build/* && yarn localize",
        "build:commonjs": "BABEL_ENV=commonjs babel src --out-dir ./build/cjs --copy-files --verbose",
        "build:modules": "BABEL_ENV=modules babel src --out-dir ./build/es --copy-files --verbose",
        "build": "NODE_ENV=production yarn build:commonjs && NODE_ENV=production yarn build:modules",
        "postbuild": "NODE_ENV=production yarn build-storybook",
        "build-storybook": "build-storybook -c .storybook -o ./build/docs",
        "start-storybook": "start-storybook --port 5000",
        "prestart": "yarn localize",
        "start": "yarn start-storybook",
        "start:testing": "STORYBOOK_INCLUDE_TESTING=1 yarn start --ci --port $PORT",
        "cypress:browser": "cypress open --config baseUrl=http://localhost:$PORT",
        "cypress:ci": "NO_COLOR=1 cypress run -b $BROWSER --config baseUrl=http://localhost:$PORT",
        "cypress:open": "PORT=12345 concurrently --kill-others -n storybook,cypress 'yarn start:testing' 'wait-on http-get://localhost:$PORT && yarn cypress:browser'",
        "cypress:run": "PORT=12345 concurrently --kill-others --success first -n storybook,cypress 'yarn start:testing' 'wait-on http-get://localhost:$PORT && yarn cypress:ci'",
        "test": "jest"
    },
    "husky": {
        "hooks": {
            "commit-msg": "d2-style commit check",
            "pre-commit": "yarn test && d2-style js apply"
        }
    },
    "cypress-cucumber-preprocessor": {
        "nonGlobalStepDefinitions": true
    },
    "devDependencies": {
        "@babel/cli": "^7.7.5",
        "@babel/core": "^7.7.7",
        "@babel/plugin-proposal-class-properties": "^7.7.4",
        "@babel/plugin-proposal-object-rest-spread": "^7.7.4",
        "@babel/plugin-transform-react-constant-elements": "^7.7.4",
        "@babel/preset-env": "^7.7.6",
        "@babel/preset-react": "^7.7.4",
        "@dhis2/app-runtime": "2.0.4",
        "@dhis2/cli-style": "5.1.0",
        "@dhis2/d2-i18n-extract": "1.0.8",
        "@dhis2/d2-i18n-generate": "1.1.1",
        "@dhis2/d2-i18n": "1.0.6",
        "@dhis2/ui-core": "4.1.2",
        "@storybook/addon-notes": "5.2.8",
        "@storybook/react": "^5.2.8",
        "@storybook/router": "^5.2.8",
        "babel-eslint": "10.x",
        "babel-loader": "^8.0.5",
        "concurrently": "^5.0.1",
        "cypress": "^3.8.0",
        "cypress-cucumber-preprocessor": "^1.19.0",
        "enzyme": "^3.10.0",
        "enzyme-adapter-react-16": "^1.14.0",
        "eslint-plugin-react": "^7.17.0",
        "fs-extra": "^8.1.0",
        "husky": "^3.0.5",
        "jest": "^24.9.0",
        "react": "^16.9.0",
        "react-dev-utils": "^10.0.0",
        "react-dom": "^16.9.0",
        "storybook-addon-jsx": "^7.1.6",
        "storybook-addon-react-docgen": "^1.2.21",
        "typeface-roboto": "^0.0.75",
        "wait-on": "^3.3.0"
    },
    "peerDependencies": {
        "@dhis2/d2-i18n": "^1",
        "@dhis2/ui-core": "^4",
        "react": "^16.8",
        "react-dom": "^16.8"
    },
    "dependencies": {
        "@dhis2/prop-types": "^1.5",
        "classnames": "^2.2.6",
        "final-form": "^4.18.5",
        "react-final-form": "^6.3.0"
    },
    "files": [
        "build"
    ]
}
