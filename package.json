{
    "name": "@dhis2/ui-form",
    "version": "1.0.4",
    "main": "./build/cjs/index.js",
    "module": "./build/es/index.js",
    "sideEffects": false,
    "repository": "git@github.com:dhis2/ui-widgets.git",
    "author": "Jan-Gerke Salomon <jan-gerke@dhis2.org>",
    "contributors": [],
    "license": "BSD-3-Clause",
    "private": false,
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "extract-pot": "d2-i18n-extract -p src/ -o i18n/",
        "generate-locale": "d2-i18n-generate -n 'ui-widgets' -p ./i18n/ -o ./src/locales/",
        "localize": "yarn extract-pot && yarn generate-locale",
        "prebuild": "rm -rf ./build/* && yarn localize",
        "build:commonjs": "BABEL_ENV=commonjs babel src --out-dir ./build/cjs --copy-files --verbose",
        "build:modules": "BABEL_ENV=modules babel src --out-dir ./build/es --copy-files --verbose",
        "build": "NODE_ENV=production yarn build:commonjs && NODE_ENV=production yarn build:modules",
        "postbuild": "NODE_ENV=production yarn build-storybook",
        "build-storybook": "build-storybook -c .storybook -o ./build/docs",
        "start-storybook": "start-storybook --port 5000",
        "prestart": "yarn localize",
        "start": "yarn start-storybook",
        "test": "jest"
    },
    "husky": {
        "hooks": {
            "commit-msg": "d2-style commit check",
            "pre-commit": "yarn test && d2-style js apply"
        }
    },
    "devDependencies": {
        "@babel/cli": "^7.6.0",
        "@babel/core": "^7.6.2",
        "@babel/plugin-proposal-class-properties": "^7.4.0",
        "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
        "@babel/plugin-transform-react-constant-elements": "^7.6.0",
        "@babel/preset-env": "^7.6.0",
        "@babel/preset-react": "^7.0.0",
        "@dhis2/app-runtime": "1.5.1",
        "@dhis2/cli-style": "4.1.1",
        "@dhis2/d2-i18n-extract": "1.0.8",
        "@dhis2/d2-i18n-generate": "1.1.1",
        "@storybook/addon-notes": "5.2.1",
        "@storybook/react": "^5.2.1",
        "babel-eslint": "10.x",
        "babel-loader": "^8.0.5",
        "enzyme": "^3.10.0",
        "enzyme-adapter-react-16": "^1.14.0",
        "eslint-plugin-react": "^7.14.3",
        "fs-extra": "^8.1.0",
        "husky": "^3.0.5",
        "react": "^16.9.0",
        "react-dev-utils": "^9.0.4",
        "react-dom": "^16.9.0",
        "storybook-addon-jsx": "^7.1.6",
        "storybook-addon-react-docgen": "^1.2.21",
        "typeface-roboto": "^0.0.75"
    },
    "peerDependencies": {
        "prop-types": "^15",
        "react": "^16.8",
        "react-dom": "^16.8"
    },
    "dependencies": {
        "@dhis2/d2-i18n": "1.0.5",
        "@dhis2/ui-core": "https://github.com/dhis2/ui-core#next",
        "classnames": "^2.2.6",
        "final-form": "^4.18.5",
        "jest": "^24.9.0",
        "react-final-form": "^6.3.0"
    },
    "files": [
        "build"
    ]
}
